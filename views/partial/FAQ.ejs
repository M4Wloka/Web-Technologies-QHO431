<head>
    <title>FAQ</title>
    <link rel="stylesheet" href="../components/faq-style.css">
</head>
<body>
    <section id="FAQ" class="faq">
        <div class="faq-container">
            <!-- ------------------- section 1 with title and search ------------------- -->
            <div class="faq-positioning-header">
                <div class="text">
                    <h3>Frequently Asked Questions (FAQ):</h3>
                    <br>
                    <!-- --------------------------- search function --------------------------- -->
                    <div class="faq-search-container"> 
                        <form id="faq-search">
                            <input type="text" id="faq-field-search" placeholder="Search FAQ...">
                            <button type="submit" id="faq-button-search">Search</button>
                        </form>
                        <div id="search-results"></div>
                    </div>
                </div>
            </div> 
            <!-- ------------------------ questions and anwsers ------------------------ -->
             <!-- ---------------------------------- 1 ---------------------------------- -->
            <div class="faq-content">
                <div class="accordion">
                    <div class="question">
